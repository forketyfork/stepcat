{
  "name": "stepcat",
  "version": "0.1.0",
  "description": "Step-by-step agent orchestration solution",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "stepcat": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:backend && npm run postbuild",
    "build:backend": "tsc",
    "postbuild": "node -e \"const fs = require('fs'); const path = 'dist/cli.js'; let content = fs.readFileSync(path, 'utf8'); if (!content.startsWith('#!')) { content = '#!/usr/bin/env node\\n' + content; fs.writeFileSync(path, content); fs.chmodSync(path, '755'); }\"",
    "start": "node dist/cli.js",
    "dev": "npm run build:backend && node dist/cli.js",
    "test": "jest && vitest run",
    "test:jest": "jest",
    "test:vitest": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint backend",
    "lint:backend": "eslint backend"
  },
  "keywords": [
    "orchestration",
    "agent",
    "claude",
    "codex"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.1.12",
    "@octokit/rest": "^22.0.1",
    "@openai/codex": "^0.87.0",
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.2",
    "ink": "^6.6.0",
    "react": "^19.2.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "ink-testing-library": "^4.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "overrides": {
    "diff": "^8.0.3"
  }
}
