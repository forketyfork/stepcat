{
  "name": "stepcat",
  "version": "0.1.0",
  "description": "Step-by-step agent orchestration solution",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "stepcat": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:frontend && npm run build:backend && npm run postbuild",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:backend": "tsc",
    "postbuild": "node -e \"const fs = require('fs'); const path = 'dist/cli.js'; let content = fs.readFileSync(path, 'utf8'); if (!content.startsWith('#!')) { content = '#!/usr/bin/env node\\n' + content; fs.writeFileSync(path, content); fs.chmodSync(path, '755'); }\"",
    "start": "node dist/cli.js",
    "dev": "npm run build:backend && node dist/cli.js",
    "dev:frontend": "cd frontend && npm run dev",
    "test": "jest && vitest run",
    "test:jest": "jest",
    "test:vitest": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint backend && cd frontend && npm run lint",
    "lint:backend": "eslint backend",
    "lint:frontend": "cd frontend && npm run lint"
  },
  "keywords": [
    "orchestration",
    "agent",
    "claude",
    "codex"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.0.35",
    "@octokit/rest": "^22.0.1",
    "@openai/codex": "^0.55.0",
    "better-sqlite3": "^12.4.1",
    "commander": "^14.0.2",
    "express": "^5.1.0",
    "ink": "^6.4.0",
    "open": "^10.2.0",
    "react": "^19.2.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/ui": "^4.0.8",
    "eslint": "^9.39.1",
    "ink-testing-library": "^4.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.8"
  }
}
